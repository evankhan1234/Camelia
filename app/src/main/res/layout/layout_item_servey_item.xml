<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0px"
    android:clipToPadding="false"
    android:elevation="50px">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="15dp"

            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true">




            <RelativeLayout

                android:id="@+id/rlt_fragment_rootxs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/linears3s"
                    android:layout_marginTop="20px"
                    android:layout_below="@+id/linears2"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">





                    <RelativeLayout
                        android:layout_marginTop="20px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:drawablePadding="20px"
                            android:drawableLeft="@drawable/ic_date_vector_dark"
                            android:id="@+id/text_date"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40px"

                            android:tag="55"
                            android:text="Sep 26,2019"
                            android:textColor="#000"
                            android:textSize="55px" />


                    </RelativeLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:drawablePadding="20px"
                            android:id="@+id/text_safe_drinking"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40px"

                            android:tag="40"
                            android:text="Sep 26,2019"
                            android:textColor="#000"
                            android:textSize="40px" />
                        <TextView
                            android:layout_weight="1"
                            android:drawablePadding="20px"
                            android:id="@+id/text_sanitary"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40px"

                            android:tag="40"
                            android:text="Sep 26,2019"
                            android:textColor="#000"
                            android:textSize="40px" />
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:drawablePadding="20px"
                            android:id="@+id/text_bondho"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40px"

                            android:tag="40"
                            android:text="Sep 26,2019"
                            android:textColor="#000"
                            android:textSize="40px" />
                        <TextView
                            android:layout_weight="1"
                            android:drawablePadding="20px"
                            android:id="@+id/text_biomas_fuel"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40px"

                            android:tag="40"
                            android:text="Sep 26,2019"
                            android:textColor="#000"
                            android:textSize="40px" />
                    </LinearLayout>
                    <LinearLayout

                        android:gravity="center"
                        android:id="@+id/linears3"
                        android:layout_marginTop="30px"
                        android:layout_below="@+id/linears2"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textAlignment="center"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/linears3"
                            android:id="@+id/text_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:minWidth="300px"

                            android:layout_marginLeft="40px"
                            android:background="@drawable/status_accepted"

                            android:padding="15px"
                            android:tag="40"
                            android:text="Update"
                            android:layout_marginRight="10px"

                            android:textColor="@color/white"
                            android:textSize="40px" />
                        <TextView
                            android:textAlignment="center"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/linears3"
                            android:id="@+id/text_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:minWidth="300px"

                            android:layout_marginLeft="40px"
                            android:background="@drawable/status_reject"

                            android:padding="15px"
                            android:visibility="invisible"
                            android:tag="40"
                            android:text="Delete"
                            android:layout_marginRight="10px"

                            android:textColor="@color/white"
                            android:textSize="40px" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10px"/>
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>