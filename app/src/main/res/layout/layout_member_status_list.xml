<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0px"
    android:clipToPadding="false"
    android:elevation="50px">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="5dp"

            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginBottom="0px"
                android:background="@drawable/btn_background"
                android:orientation="vertical"
                android:padding="10px"
                android:visibility="visible">


                <RelativeLayout

                    android:id="@+id/rlt_fragment_rootxs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/layout"
                        android:visibility="visible"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_marginTop="30px"
                            android:id="@+id/img_avatar"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"

                            android:elevation="10px"
                            android:layout_width="280px"
                            android:layout_height="280px"
                            android:src="@drawable/backwhite"
                            app:civ_border_color="#358ED3"
                            app:civ_border_width="3dp"


                            />

                        <LinearLayout
                            android:layout_marginTop="25px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_name"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40px"

                                android:tag="40"
                                android:text="Rajia Sultana"
                                android:textColor="#6A6B6B"
                                android:textSize="40px" />

                            <TextView
                                android:id="@+id/text_phone_number"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40px"

                                android:tag="40"
                                android:text="cfb9894-a"
                                android:textColor="#6A6B6B"
                                android:textSize="40px" />
                            <TextView
                                android:layout_marginLeft="40px"
                                android:id="@+id/text_agent"
                                android:tag="40"
                                android:textSize="40px"

                                android:text="Buisness Development "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/text_member_id"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40px"

                                android:tag="40"
                                android:text="+8801677182084"
                                android:textColor="#6A6B6B"
                                android:textSize="40px" />
                            <TextView
                                android:layout_marginLeft="40px"
                                android:id="@+id/text_village"
                                android:tag="40"
                                android:textSize="40px"

                                android:text="Executive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/text_date"
                                android:layout_marginLeft="40px"
                                android:tag="40"
                                android:textSize="40px"
                                android:text="DCO"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/text_block"
                                android:layout_marginLeft="40px"
                                android:tag="40"
                                android:textSize="40px"
                                android:text="(1166)"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout

                        android:layout_below="@+id/layout"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_marginTop="20px"
                            android:backgroundTint="#00BCD4"

                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:id="@+id/text_visited"
                            android:layout_width="350px"
                            android:layout_height="100px"
                            android:minWidth="350px"

                            android:layout_marginLeft="140px"


                            android:padding="15px"
                            android:tag="40"
                            android:textStyle="bold"
                            android:text="Visit"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="40px" />
                        <TextView

                            android:layout_marginTop="20px"
                            android:backgroundTint="#00BCD4"

                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:id="@+id/text_visits"
                            android:layout_width="350px"
                            android:layout_height="100px"
                            android:minWidth="350px"

                            android:layout_marginLeft="140px"
                            android:background="@drawable/btn_yes"

                            android:padding="15px"
                            android:tag="40"
                            android:text="Visit"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="40px" />
                        <TextView

                            android:layout_marginTop="20px"
                            android:backgroundTint="#00BCD4"

                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:id="@+id/text_follow"
                            android:layout_width="350px"
                            android:layout_height="100px"
                            android:minWidth="350px"

                            android:layout_marginLeft="140px"
                            android:background="@drawable/btn_yes"

                            android:padding="15px"
                            android:tag="40"
                            android:text="Follow"
                            android:textColor="@color/white"
                            android:textSize="40px" />
                        <TextView
                            android:layout_marginTop="20px"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:minWidth="350px"
                            android:id="@+id/text_referral"
                            android:layout_width="350px"
                            android:layout_height="100px"


                            android:layout_marginLeft="40px"
                            android:background="@drawable/btn_yes"

                            android:padding="15px"
                            android:tag="40"
                            android:text="Refer"
                            android:textColor="@color/white"
                            android:textSize="40px" />
                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="20px"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:minWidth="350px"
                            android:id="@+id/text_visit"
                            android:layout_width="0dp"
                            android:layout_height="100px"
                            android:backgroundTint="#8BC34A"

                            android:layout_marginLeft="40px"
                            android:background="@drawable/btn_yes"

                            android:padding="15px"
                            android:tag="40"
                            android:text="Add to UHC"
                            android:textColor="@color/white"
                            android:textSize="40px" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_next"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"

                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_height="70px"
                        android:src="@drawable/right_arrow"
                        android:layout_width="70px"/>
                </RelativeLayout>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>