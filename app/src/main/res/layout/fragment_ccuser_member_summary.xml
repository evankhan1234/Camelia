<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/rlt_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/text_date_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30px"
                    android:drawablePadding="18px"
                    android:tag="50"
                    android:text="19-11-2019"
                    android:textColor="@color/colorPrimary"
                    android:textSize="50px"
                    android:textStyle="bold" />





                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:visibility="gone"

                        android:layout_gravity="center"
                        android:id="@+id/scr_category_present"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="20px"
                        android:overScrollMode="never"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/lnl_categoryzz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioGroup
                                    android:id="@+id/radioPresents"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:checked="true"
                                        android:id="@+id/radioAllPresent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="50px"
                                        android:text="All" />
                                    <RadioButton
                                        android:id="@+id/radioPresentOnTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:text="On-Time" />

                                    <RadioButton
                                        android:id="@+id/radioPresentLate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Late" />





                                </RadioGroup>

                            </LinearLayout>


                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="30px"

                    android:id="@+id/card_view"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"


                    android:layout_marginLeft="20px"

                    android:layout_marginRight="20px"

                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_marginTop="50px"
                        android:layout_marginLeft="50px"
                        android:layout_marginRight="50px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50px"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                          >
                            <ImageView
                                android:id="@+id/img1"
                                android:src="@drawable/blood_pressure"
                                android:layout_width="150px"
                                android:layout_height="80px" />

                            <TextView
                                android:id="@+id/text_1"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15px"
                                android:layout_toRightOf="@+id/img1"
                                android:tag="45"
                                android:text="Hypertension"
                                android:textColor="@color/gray_black"
                                android:textSize="45px" />
                            <TextView
                                android:id="@+id/text_hypertension"                                android:textStyle="bold"
                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="@color/gray_black"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="15px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40"
                                />

                        </RelativeLayout>

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="5px"

                            android:layout_marginTop="10px"
                            android:background="@drawable/gradient_color_top" />
                        <RelativeLayout
                            android:layout_marginTop="15px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/img2"
                                android:src="@drawable/diabetes_test"
                                android:layout_width="150px"
                                android:layout_height="80px" />

                            <TextView
                                android:id="@+id/text_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/img2"
                                android:tag="45"
                                android:text="Diabetic"
                                android:textColor="@color/gray_black"
                                android:textSize="45px" />
                            <TextView
                                android:id="@+id/text_diabetis"
                                android:textStyle="bold"
                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="@color/gray_black"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="15px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                />

                        </RelativeLayout>

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="5px"

                            android:layout_marginTop="10px"
                            android:background="@drawable/gradient_color_top" />
                        <RelativeLayout
                            android:layout_marginTop="15px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/img3"
                                android:src="@drawable/bmi"
                                android:layout_width="150px"
                                android:layout_height="80px" />

                            <TextView
                                android:id="@+id/text_3"

                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="15px"
                                android:layout_toRightOf="@+id/img3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Obese (BMI)"
                                />
                            <TextView
                                android:id="@+id/text_bmi"
                                android:textStyle="bold"
                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="@color/gray_black"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="15px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="17"
                                />

                        </RelativeLayout>

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="5px"

                            android:layout_marginTop="10px"
                            android:background="@drawable/gradient_color_top" />
                        <RelativeLayout
                            android:visibility="gone"
                            android:layout_marginTop="15px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/img4"
                                android:src="@drawable/waist"
                                android:layout_width="150px"
                                android:layout_height="80px" />

                            <TextView

                                android:visibility="gone"
                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="15px"
                                android:layout_toRightOf="@+id/img4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Obese (WC)"
                                />
                            <TextView
                                android:textStyle="bold"
                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="@color/gray_black"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="15px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                />

                        </RelativeLayout>

                        <View
                            android:visibility="gone"

                            android:layout_width="match_parent"
                            android:layout_height="5px"

                            android:layout_marginTop="10px"
                            android:background="@drawable/gradient_color_top" />

                        <RelativeLayout
                            android:layout_marginTop="15px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/img5"
                                android:src="@drawable/glucose_meter"
                                android:layout_width="150px"
                                android:layout_height="80px" />

                            <TextView
                                android:id="@+id/text_4"
                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="@color/gray_black"
                                android:layout_marginTop="15px"
                                android:layout_toRightOf="@+id/img5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Extra Weight"
                                />
                            <TextView
                                android:id="@+id/text_weight_number"
                                android:textStyle="bold"
                                android:tag="45"
                                android:textSize="45px"
                                android:textColor="@color/gray_black"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="15px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="110"
                                />

                        </RelativeLayout>

                        <View
                            android:id="@+id/view_header"
                            android:layout_width="match_parent"
                            android:layout_height="5px"

                            android:layout_marginTop="10px"
                            android:background="@drawable/gradient_color_top" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_marginTop="20px"
                    android:layout_below="@+id/rlt_header"
                    android:id="@+id/filter"

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edit_start_date"
                        android:focusable="false"
                        android:drawableLeft="@drawable/ic_date_vector_dark"
                        android:drawablePadding="15px"
                        android:paddingLeft="20px"
                        android:hint="Start Date"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/border"

                        android:layout_width="400px"
                        android:layout_height="100px"/>
                    <EditText
                        android:id="@+id/edit_end_date"
                        android:drawableLeft="@drawable/ic_date_vector_dark"
                        android:drawablePadding="15px"
                        android:paddingLeft="20px"
                        android:hint="End Date"
                        android:layout_marginLeft="40px"
                        android:background="@drawable/border"
                        android:focusable="false"
                        android:layout_width="400px"
                        android:layout_height="100px"/>
                    <Button
                        android:layout_marginLeft="20px"
                        android:tag="45"
                        android:textSize="45px"

                        android:id="@+id/btn_yes"

                        android:background="@drawable/capsule_button"
                        android:layout_marginRight="40px"
                        android:hint="Show"
                        android:textColorHint="#fff"
                        android:layout_width="200px"
                        android:layout_height="100px" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="25px"
                    android:background="@color/colorPrimary"


                    android:layout_below="@+id/filter"

                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:id="@+id/layout_header"

                    >

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingTop="10px"
                        android:paddingBottom="10px"
                        android:tag="40"
                        android:textSize="40px"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Date"
                        android:gravity="center|center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:id="@+id/text_date_one" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/text_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center|center_vertical"
                        android:paddingTop="10px"
                        android:paddingBottom="10px"
                        android:tag="40"
                        android:text="Punch In "
                        android:textColor="@color/white"
                        android:textSize="40px"
                        android:textStyle="bold" />

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingTop="10px"
                        android:paddingBottom="10px"
                        android:tag="40"
                        android:textSize="40px"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Hypertension"
                        android:gravity="center|center_vertical"
                        android:layout_weight="1"

                        android:background="@drawable/cell_shape"
                        android:id="@+id/text_hyper" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingTop="10px"
                        android:paddingBottom="10px"
                        android:tag="40"
                        android:textSize="40px"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Diabetic"
                        android:gravity="center|center_vertical"
                        android:layout_weight="1"

                        android:background="@drawable/cell_shape"
                        android:id="@+id/text_dibet" />


                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingTop="10px"
                        android:paddingBottom="10px"
                        android:tag="40"
                        android:textSize="40px"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Obese (BMI)"
                        android:gravity="center|center_vertical"
                        android:layout_weight="1"

                        android:background="@drawable/cell_shape"
                        android:id="@+id/text_obes" />

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingTop="10px"
                        android:paddingBottom="10px"
                        android:tag="40"
                        android:textSize="40px"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Extra Weight"
                        android:gravity="center|center_vertical"
                        android:layout_weight="1"

                        android:background="@drawable/cell_shape"
                        android:id="@+id/text_extra_weight" />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/rcl_approval_in_list"
                    android:layout_width="match_parent"


                    android:layout_height="match_parent"


                    android:nestedScrollingEnabled="false"




                    >

                </androidx.recyclerview.widget.RecyclerView>

                <RelativeLayout
                    android:id="@+id/rlt_detail_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <ProgressBar

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:background="@android:color/transparent" />
</RelativeLayout>