<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0px">
    <LinearLayout

        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72px"
        android:layout_marginTop="86px"
        android:layout_marginRight="69px"
        android:alpha="1.5"
        android:visibility="visible"
        android:background="@drawable/dialog_rounded_bg"

        android:orientation="vertical"
        android:padding="40px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0px"
                android:layout_marginTop="4px"
                android:layout_marginRight="0px"
                android:gravity="center"
                android:tag="55"
                android:text="সাক্ষাতকারের জন্য সমাপত্র"
                android:textColor="@color/gray_black"
                android:textSize="55px" />
        </RelativeLayout>
        <View
            android:id="@+id/view_header"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_below="@+id/rlt_header"
            android:layout_marginTop="1dp"
            android:background="@drawable/gradient_color_top" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="900px"
                android:layout_marginLeft="0px"
                android:layout_marginTop="14px"
                android:layout_marginRight="0px"
                android:gravity="center"
                android:tag="45"
                android:text="@string/ss"
                android:textColor="@color/gray_black"
                android:textSize="45px" />
        </RelativeLayout>
        <View
            android:id="@+id/view_headers"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_below="@+id/rlt_header"
            android:layout_marginTop="1dp"
            android:background="@drawable/gradient_color_top" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0px"
                android:layout_marginTop="44px"
                android:layout_marginRight="0px"
                android:gravity="center"
                android:tag="45"
                android:text="আপনি কি আমাদের গবেষণায় অংশ নিতে রাজি আছেন?"
                android:textColor="@color/gray_black"
                android:textSize="45px" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="420px"
                android:layout_height="140px"
                android:layout_gravity="center"

                android:layout_marginLeft="0px"
                android:layout_marginRight="15px"
                android:background="@drawable/btn_no"

                android:gravity="center"
                android:paddingBottom="5px"
                android:stateListAnimator="@null"
                android:tag="45"
                android:text="No"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="45px" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="420px"
                android:layout_height="140px"
                android:layout_marginTop="-4px"
                android:background="@drawable/btn_yes"

                android:paddingBottom="5px"
                android:stateListAnimator="@null"
                android:tag="45"
                android:text="Yes"
                android:textColor="@color/white"

                android:textSize="45px"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>